{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageType": {
            "type": "string",
            "metadata": {
                "description": "Maybe redundant, passing value from main template"
            }
        },
        "storageAccountNamePrefix": {
            "type": "string"
        },
        "vnetReferenceId": {
            "type": "string"
        },
        "subnetID": {
            "type": "string"
        },
        "subnetID3dbzpub": {
            "type": "string"
        },
        "storageApiVersion": {
            "type": "string"
        },
        "storageSku": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_ZRS",
                "Standard_GRS",
                "Standard_RAGRS"
            ],
            "metadata": {
                "description": "Defines the type of storage account to use for the data lake store"
            }
        },
        "deploymentType": {
            "type": "string",
            "allowedValues": [ "dev", "prod" ],
            "defaultValue": "dev",
            "metadata": {
                "description": "String to determine which network the VM is deployed to."
            }
      }
     },
    "variables": {
        "storageDLAccountName": "[concat(parameters('storageAccountNamePrefix'),'88',parameters('deploymentType'))]",
        "storageAccountApiVersion": "[parameters('storageApiVersion')]",
        "storageAccountResourceId": "[resourceId('Microsoft.Storage/storageAccounts', variables('storageDLAccountName'))]",
        "vNetURI": "[concat(subscription().id,'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Network/virtualNetworks/',parameters('vnetReferenceId'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "[variables('storageAccountApiVersion')]",
            "location": "[resourceGroup().location]",
            "name": "[variables('storageDLAccountName')]",
            "tags": {
                "displayName": "[variables('storageDLAccountName')]"
            },
            "kind": "StorageV2",
            "sku": {
                "name": "[parameters('storageSku')]"
            },
            "properties": {
                "encryption": {
                    "keySource": "Microsoft.Storage",
                    "services": {
                        "blob": {
                            "enabled": true
                        },
                        "file": {
                            "enabled": true
                        }
                    }
                },
                "isHnsEnabled": true,
                "supportsHttpsTrafficOnly": true,
                "accountType": "[parameters('storageType')]",
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [
                        {
                            "id": "[concat(variables('vNetURI'), '/subnets/', parameters('subnetID'))]",
                            "action": "Allow",
                            "state": "Succeeded"
                        },
                        {
                            "id": "[concat(variables('vNetURI'), '/subnets/', parameters('subnetID3dbzpub'))]",
                            "action": "Allow",
                            "state": "Succeeded"
                        }
                    ],
                    "ipRules": [
                        {
                            "value": "24.14.139.25",
                            "action": "Allow"
                        },
                        {
                            "value": "208.185.7.18",
                            "action": "Allow"
                        },
                        {
                            "value": "136.49.36.60",
                            "action": "Allow"
                        },
                        {
                            "value": "50.252.110.33",
                            "action": "Allow"
                        },
                        {
                            "value": "69.245.205.79",
                            "action": "Allow"
                        },
                        {
                            "value": "73.74.166.198",
                            "action": "Allow"
                        }
                    ],
                    "defaultAction": "Deny"
                },
                "accessTier": "Hot"
                }
            }
        
    ],
    "outputs": {
        "storageDLAccountName": {
            "type": "string",
            "value": "[variables('storageAccountResourceId')]"
        }
    }
}