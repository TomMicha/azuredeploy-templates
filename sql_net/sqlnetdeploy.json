{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "sqlserver-alasdia-devAdminLogin": {
        "type": "string",
        "minLength": 1
      },
      "sqlserver-alasdia-devAdminLoginPassword": {
        "type": "securestring"
      },
      "sqldb-alasdia-devName": {
        "type": "string",
        "minLength": 1
      },
      "sqldb-alasdia-devCollation": {
        "type": "string",
        "minLength": 1,
        "defaultValue": "SQL_Latin1_General_CP1_CI_AS"
      },
      "sqldb-alasdia-devEdition": {
        "type": "string",
        "defaultValue": "Basic",
        "allowedValues": [
          "Basic",
          "Standard",
          "Premium"
        ]
      },
      "sqldb-alasdia-devRequestedServiceObjectiveName": {
        "type": "string",
        "defaultValue": "Basic",
        "allowedValues": [
          "Basic",
          "S0",
          "S1",
          "S2",
          "P1",
          "P2",
          "P3"
        ],
        "metadata": {
          "description": "Describes the performance level for Edition"
        }
      }
    },
    "variables": {
      "sqlserver-alasdia-devName": "[concat('sqlserver-alasdia-dev', uniqueString(resourceGroup().id))]",
      "vnet-alasdia-devPrefix": "10.0.0.0/16",
      "vnet-alasdia-devSubnet1Name": "Subnet-1",
      "vnet-alasdia-devSubnet1Prefix": "10.0.0.0/24",
      "vnet-alasdia-devSubnet2Name": "Subnet-2",
      "vnet-alasdia-devSubnet2Prefix": "10.0.1.0/24"
    },
    "resources": [
      {
        "name": "[variables('sqlserver-alasdia-devName')]",
        "type": "Microsoft.Sql/servers",
        "location": "[resourceGroup().location]",
        "apiVersion": "2014-04-01-preview",
        "dependsOn": [ ],
        "tags": {
          "displayName": "sqlserver-alasdia-dev"
        },
        "properties": {
          "administratorLogin": "[parameters('sqlserver-alasdia-devAdminLogin')]",
          "administratorLoginPassword": "[parameters('sqlserver-alasdia-devAdminLoginPassword')]"
        },
        "resources": [
          {
            "name": "AllowAllWindowsAzureIps",
            "type": "firewallrules",
            "location": "[resourceGroup().location]",
            "apiVersion": "2014-04-01-preview",
            "dependsOn": [
              "[resourceId('Microsoft.Sql/servers', variables('sqlserver-alasdia-devName'))]"
            ],
            "properties": {
              "startIpAddress": "0.0.0.0",
              "endIpAddress": "0.0.0.0"
            }
          },
          {
            "name": "[parameters('sqldb-alasdia-devName')]",
            "type": "databases",
            "location": "[resourceGroup().location]",
            "apiVersion": "2014-04-01-preview",
            "dependsOn": [
              "[resourceId('Microsoft.Sql/servers', variables('sqlserver-alasdia-devName'))]"
            ],
            "tags": {
              "displayName": "sqldb-alasdia-dev"
            },
            "properties": {
              "collation": "[parameters('sqldb-alasdia-devCollation')]",
              "edition": "[parameters('sqldb-alasdia-devEdition')]",
              "maxSizeBytes": "1073741824",
              "requestedServiceObjectiveName": "[parameters('sqldb-alasdia-devRequestedServiceObjectiveName')]"
            }
          }
        ]
      },
      {
        "name": "vnet-alasdia-dev",
        "type": "Microsoft.Network/virtualNetworks",
        "location": "[resourceGroup().location]",
        "apiVersion": "2016-03-30",
        "dependsOn": [ ],
        "tags": {
          "displayName": "vnet-alasdia-dev"
        },
        "properties": {
          "addressSpace": {
            "addressPrefixes": [
              "[variables('vnet-alasdia-devPrefix')]"
            ]
          },
          "subnets": [
            {
              "name": "[variables('vnet-alasdia-devSubnet1Name')]",
              "properties": {
                "addressPrefix": "[variables('vnet-alasdia-devSubnet1Prefix')]"
              }
            },
            {
              "name": "[variables('vnet-alasdia-devSubnet2Name')]",
              "properties": {
                "addressPrefix": "[variables('vnet-alasdia-devSubnet2Prefix')]"
              }
            }
          ]
        }
      }
    ],
    "outputs": {
    }
  }