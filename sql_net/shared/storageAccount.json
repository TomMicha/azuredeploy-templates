{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "storageType": {
        "type": "string",
        "defaultValue": "Standard_LRS",
        "allowedValues": [
          "Standard_LRS",
          "Standard_ZRS",
          "Standard_GRS",
          "Standard_RAGRS",
          "Premium_LRS"
        ]
      },
      "storageApiVersion": {
        "type": "string",
        "metadata": {
          "description": "Azure API for Storage Account."
        }
      },
      "storageAccountNamePrefix": {
        "type": "string",
        "metadata": {
          "description": "Prefix for Storage Account Name"
        }
      },
      "checkPassword": {
        "type": "string"
      }
    },
    "variables": {
      "storageName": "[concat(parameters('storageAccountNamePrefix'), uniqueString(resourceGroup().id))]"
    },
    "resources": [
      {
        "name": "[variables('storageName')]",
        "type": "Microsoft.Storage/storageAccounts",
        "location": "[resourceGroup().location]",
        "apiVersion": "[parameters('storageApiVersion')]",
        "dependsOn": [ ],
        "tags": {
          "displayName": "[variables('storageName')]",
          "passChecker": "[parameters('checkPassword')]"
        },
        "properties": {
          "accountType": "[parameters('storageType')]"
        }
      }
    ],
    "outputs": {
      "storageAccountName": {
        "type": "string",
        "value": "[variables('storageName')]"
      }
    }
  }